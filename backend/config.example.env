# Database Config
DATABASE_URL=user=postgres password=postgres dbname=ihg sslmode=disable

# Firebase Admin Config
# (The JSON file is ignored via gitignore, but path can be set here if needed)
FIREBASE_CONFIG_PATH=serviceAccountKey.json

# CORS Config
CORS_ORIGINS=http://localhost:4321,http://localhost:3000

# Server Config
PORT=8080

# Email Config (SMTP)
CONTACT_TO=your-email@example.com
CONTACT_FROM=noreply@yourdomain.com
CONTACT_SUBJECT_PREFIX=[Website Contact]
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_IMPLICIT_TLS=false
SMTP_TLS_INSECURE_SKIP_VERIFY=false
