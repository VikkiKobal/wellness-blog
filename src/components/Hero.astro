<section id="hero" class="hero">
  <div class="container hero-container">
    <div class="hero-content">
      <div class="hero-heading">
        <h1>
          <span class="line-1">Human-Centered <span class="teaching-word">Teaching<svg class="heading-underline" width="140" height="10" viewBox="0 0 140 10" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M2 8C30 2 110 -2 138 8" stroke="#BAD8B6" stroke-width="4" stroke-linecap="round"/>
            </svg></span></span>
          <span class="line-2">for a <span class="teaching-word">Changing<svg class="heading-underline" width="140" height="10" viewBox="0 0 140 10" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M2 8C30 2 110 -2 138 8" stroke="#BAD8B6" stroke-width="4" stroke-linecap="round"/>
            </svg></span> World</span>
        </h1>
      </div>
      
      <p class="hero-description">
        I am an educator, mentor, and course designer helping teachers, universities, and institutions bring well-being, resilience, and innovation into the learning process.
        My work bridges research, global experience, and mindful, trauma-informed practice
      </p>
      
      <div class="hero-actions">
        <a href="/courses" class="btn btn-primary hero-btn">
          Explore my work
        </a>
        <a href="/courses" class="btn btn-primary hero-btn">
          Invite me to speak
        </a>
      </div>
    </div>

    <div class="hero-visual">
      <div class="hero-circle-outline"></div>
      <div class="hero-circle-gradient"></div>
      <div class="hero-image-wrapper">
        <img src="/images/hero-portrait.png" alt="Antonina Devitska" class="hero-image" />
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    padding: 160px 0 80px; /* Трохи підняв базу (було 170px) */
    overflow: hidden;
  }

  @media (min-width: 1600px) {
    .hero {
      padding: 130px 0 80px; /* Трохи підняв для найбільших екранів (було 140px) */
    }
  }
  
  .hero-container {
    position: relative;
    z-index: 3;
    display: flex;
    align-items: center;
    justify-content: center; /* Changed from space-between to keep them together */
    gap: clamp(40px, 8vw, 100px); /* Responsive gap */
    padding: 0 60px; /* Increased from 40px to give more space on the left */
    margin: 0 auto;
    max-width: 1440px; /* Slightly increased to match common layout widths */
  }

  .hero-content {
    max-width: 658px;
    flex: 0 1 auto; /* Allow it to shrink but not grow beyond max-width */
  }

  .hero-visual {
    position: relative;
    flex: 0 0 auto;
    width: clamp(400px, 35vw, 540px); /* Responsive size for the visual block */
    height: clamp(400px, 35vw, 540px);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-circle-outline {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    border: 3px solid var(--color-primary);
    border-radius: 50%;
    opacity: 0.5;
  }
  
  .hero-circle-gradient {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90%;
    height: 90%;
    border-radius: 50%;
    background: var(--gradient-hero);
    opacity: 0.8;
  }
  
  .hero-image-wrapper {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90%;
    height: 90%;
    z-index: 2;
    border-radius: 50%;
    overflow: hidden;
    /* Fix for browser clipping issues */
    transform: translate(-50%, -50%) translateZ(0);
    isolation: isolate;
  }

  .hero-heading {
    margin-bottom: 40px;
  }

  .hero-heading h1 {
    font-family: var(--font-primary);
    font-weight: 600;
    font-size: clamp(44px, 3.2vw, 50px); /* Reduced from 54px to fit better on large screens */
    line-height: 1.2;
    color: var(--color-text-dark);
  }

  .hero-heading .line-1 {
    display: block;
  }

  .hero-heading .line-2 {
    display: block;
  }

  .teaching-word {
    position: relative;
    display: inline-block;
    z-index: 1;
  }

  .heading-underline {
    position: absolute;
    bottom: 2px;
    left: 0;
    width: 140px;
    height: 10px;
    z-index: -1;
  }
  
  .hero-description {
    font-family: var(--font-primary);
    font-weight: 400;
    font-size: clamp(18px, 1.5vw, 22px); /* Slightly reduced for better balance */
    line-height: 1.4;
    color: var(--color-text-black);
    margin-bottom: 50px;
    max-width: 650px;
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 14px;
    align-items: center;
  }
  
  .hero-btn {
    background: var(--color-primary);
    color: var(--color-white);
    padding: 12px 22px;
    font-size: 20px;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center top;
  }

  /* Tablet landscape / Small Desktop: 969px - 1270px */
  @media (max-width: 1270px) and (min-width: 969px) {
    .hero {
      min-height: 100vh; /* Повертаємо на весь екран, щоб сховати наступну секцію */
      display: flex;
      align-items: center;
      padding: 140px 0 60px; /* Збільшив верхній відступ ще більше, щоб опустити вміст */
    }
    
    .hero-container {
      gap: 60px; /* Збільшуємо проміжок */
      padding: 0 60px;
    }
    
    .hero-visual {
      width: clamp(420px, 38vw, 480px); /* Робимо фото більшим */
      height: clamp(420px, 38vw, 480px);
    }
    
    .hero-content {
      max-width: 540px; /* Робимо текст ширшим */
      padding-top: 0;
    }
    
    .hero-heading h1 {
      font-size: 46px; /* Збільшуємо шрифт */
    }
    
    .hero-description {
      font-size: 20px;
      margin-bottom: 40px;
    }

    .hero-btn {
      font-size: 18px;
      padding: 12px 24px;
    }
  }
  
  @media (max-width: 968px) {
    .hero {
      min-height: auto;
      padding: 120px 0 60px;
    }
    
    .hero-container {
      flex-direction: column;
      text-align: center;
      gap: 40px;
    }

    .hero-visual {
      order: -1; /* Image first on mobile */
      width: 350px;
      height: 350px;
      margin: 0 auto;
    }
    
    .hero-circle-outline {
      width: 300px;
      height: 300px;
    }
    
    .hero-circle-gradient,
    .hero-image-wrapper {
      width: 260px;
      height: 260px;
    }
    
    .hero-content {
      max-width: 100%;
      padding: 0 24px;
    }
    
    .hero-heading h1 {
      font-size: 34px;
    }
    
    .heading-underline {
      display: none;
    }
    
    .hero-description {
      font-size: 17px;
      margin: 0 auto 40px;
    }

    .hero-actions {
      justify-content: center;
    }
  }
  
  @media (max-width: 480px) {
    .hero {
      padding: 104px 0 48px;
    }

    .hero-visual {
      width: 280px;
      height: 280px;
    }
    
    .hero-circle-outline {
      width: 260px;
      height: 260px;
    }
    
    .hero-circle-gradient,
    .hero-image-wrapper {
      width: 220px;
      height: 220px;
    }
    
    .hero-content {
      padding: 0 20px;
    }

    .hero-heading h1 {
      font-size: 26px;
    }
    
    .hero-description {
      font-size: 15px;
      margin-bottom: 36px;
    }
    
    .hero-btn {
      width: 100%;
      font-size: 16px;
      padding: 12px 16px;
    }
  }
</style>

