---
interface Props {
  quote?: string;
}

const { 
  quote = "Transformative learning isn't just about what we know â€” it's about who we become." 
} = Astro.props;
---

<section class="quote-banner">
  <div class="container">
    <blockquote class="quote-text">
      {quote}
    </blockquote>
  </div>
</section>

<style>
  .quote-banner {
    background: var(--gradient-banner);
    padding: 70px 0;
  }
  
  .quote-text {
    font-family: var(--font-secondary);
    font-weight: 400;
    font-size: 40px;
    line-height: 1.1;
    color: var(--color-white);
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
  }
  
  @media (max-width: 968px) {
    .quote-banner {
      padding: 50px 0;
    }
    
    .quote-text {
      font-size: 28px;
    }
  }
  
  @media (max-width: 480px) {
    .quote-text {
      font-size: 22px;
    }
  }
</style>

