---
// CourseModal component - displays course details in a popup
---

<div id="course-modal" class="modal-overlay" aria-hidden="true">
  <div class="modal-content" role="dialog" aria-modal="true" aria-labelledby="modal-title">
    <button class="modal-close" aria-label="Close modal">
      <svg width="26" height="26" viewBox="0 0 26 26" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="13" cy="13" r="12" stroke="currentColor" stroke-width="2"/>
        <path d="M8 8L18 18M18 8L8 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </button>

    <div class="modal-body">
      <div class="modal-image">
        <img id="modal-course-image" src="" alt="" />
      </div>

      <div class="modal-info">
        <h2 id="modal-title" class="modal-title"></h2>

        <p id="modal-description" class="modal-description"></p>

        <div class="useful-for">
          <span class="useful-label">Useful for:</span>
          <div class="tags" id="modal-tags">
            <span class="tag">students</span>
            <span class="tag">professionals</span>
            <span class="tag">anyone seeking self-improvement</span>
          </div>
        </div>

        <div class="modal-actions">
          <a id="modal-enroll-btn" href="#" target="_blank" class="enroll-btn">
            Enroll Now
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    padding: 20px;
  }

  .modal-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .modal-content {
    background: var(--color-background);
    border: 1px solid var(--color-primary);
    border-radius: 18px;
    max-width: 941px;
    width: 100%;
    max-height: 90vh;
    overflow: hidden;
    position: relative;
    transform: scale(0.9) translateY(20px);
    transition: transform 0.3s ease;
  }

  .modal-overlay.active .modal-content {
    transform: scale(1) translateY(0);
  }

  .modal-close {
    position: absolute;
    top: 20px;
    right: 20px;
    background: none;
    border: none;
    cursor: pointer;
    color: var(--color-primary);
    z-index: 10;
    padding: 0;
    transition: all 0.3s ease;
  }

  .modal-close:hover {
    color: var(--color-primary-dark);
    transform: rotate(90deg);
  }

  .modal-body {
    display: grid;
    grid-template-columns: 300px 1fr;
    min-height: 450px;
  }

  .modal-image {
    background: var(--color-primary);
    border-radius: 18px 0 0 18px;
    overflow: hidden;
  }

  .modal-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .modal-info {
    padding: 50px 60px 50px 50px;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .modal-title {
    font-family: var(--font-primary);
    font-weight: 600;
    font-size: 28px;
    line-height: 1.79;
    color: var(--color-text-black);
    margin: 0;
    padding-right: 40px;
  }

  .modal-description {
    font-family: var(--font-secondary);
    font-weight: 400;
    font-size: 16px;
    line-height: 1.85;
    color: #454545;
    margin: 0;
  }

  .useful-for {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 12px;
  }

  .useful-label {
    font-family: var(--font-secondary);
    font-weight: 400;
    font-size: 16px;
    line-height: 1.85;
    color: var(--color-text-black);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
  }

  .tags :global(.tag),
  .tag {
    display: inline-flex;
    align-items: center;
    padding: 4px 16px;
    background: #E1EACD;
    border-radius: 16px;
    font-family: var(--font-secondary);
    font-weight: 400;
    font-size: 14px;
    line-height: 1.85;
    color: var(--color-text-black);
  }

  .modal-actions {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-top: auto;
  }

  .enroll-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 14px 40px;
    background: var(--color-primary);
    color: white;
    border: none;
    border-radius: 14px;
    text-decoration: none;
    font-family: var(--font-secondary);
    font-weight: 700;
    font-size: 18px;
    line-height: 1;
    cursor: pointer;
    transition: all 0.3s ease;
    min-width: 220px;
  }

  .enroll-btn:hover {
    background: var(--color-primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(141, 119, 171, 0.2);
  }

  @media (max-width: 900px) {
    .modal-body {
      grid-template-columns: 1fr;
    }

    .modal-image {
      height: 200px;
      border-radius: 18px 18px 0 0;
    }

    .modal-info {
      padding: 30px;
    }

    .modal-title {
      font-size: 22px;
    }
  }

  @media (max-width: 600px) {
    .modal-content {
      max-height: 95vh;
      border-radius: 12px;
    }

    .modal-image {
      height: 160px;
      border-radius: 12px 12px 0 0;
    }
    
    .modal-info {
      padding: 20px;
      gap: 16px;
    }

    .modal-title {
      font-size: 18px;
      padding-right: 30px;
    }

    .modal-description {
      font-size: 14px;
    }

    .modal-close {
      top: 12px;
      right: 12px;
    }

    .modal-close svg {
      width: 20px;
      height: 20px;
    }

    .useful-for {
      flex-direction: column;
      align-items: flex-start;
    }

    .tag {
      font-size: 12px;
      padding: 3px 12px;
    }

    .enroll-btn {
      min-width: 100%;
      font-size: 16px;
      padding: 12px 24px;
    }
  }
</style>

<script>
  // Modal functionality
  const modal = document.getElementById('course-modal');
  const closeBtn = modal?.querySelector('.modal-close');
  const overlay = modal;

  // Function to open modal with course data
  function openCourseModal(courseData: {
    title: string;
    description: string;
    image: string;
    enrollLink?: string;
    tags?: string[];
  }) {
    if (!modal) return;

    const titleEl = document.getElementById('modal-title');
    const descEl = document.getElementById('modal-description');
    const imageEl = document.getElementById('modal-course-image') as HTMLImageElement;
    const enrollBtn = document.getElementById('modal-enroll-btn') as HTMLAnchorElement;
    const tagsEl = document.getElementById('modal-tags');

    if (titleEl) titleEl.textContent = courseData.title;
    if (descEl) descEl.textContent = courseData.description;
    if (imageEl) {
      imageEl.src = courseData.image;
      imageEl.alt = courseData.title;
    }
    if (enrollBtn) {
      enrollBtn.href = courseData.enrollLink || '#';
      if (!courseData.enrollLink) {
        enrollBtn.style.display = 'none';
      } else {
        enrollBtn.style.display = 'flex';
      }
    }

    if (tagsEl && courseData.tags) {
      tagsEl.innerHTML = courseData.tags.map(tag =>
        `<span class="tag" style="display: inline-flex; align-items: center; padding: 4px 16px; background: #E1EACD; border-radius: 16px; font-size: 14px; line-height: 1.85; color: #000;">${tag}</span>`
      ).join('');
    }

    modal.classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  // Function to close modal
  function closeCourseModal() {
    if (!modal) return;
    modal.classList.remove('active');
    document.body.style.overflow = '';
  }

  // Close button click
  closeBtn?.addEventListener('click', closeCourseModal);

  // Click outside to close
  overlay?.addEventListener('click', (e) => {
    if (e.target === overlay) {
      closeCourseModal();
    }
  });

  // Escape key to close
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modal?.classList.contains('active')) {
      closeCourseModal();
    }
  });

  // Expose function globally
  (window as any).openCourseModal = openCourseModal;
</script>
