---
import BlogCard from './BlogCard.astro';

interface BlogPost {
  title: string;
  category: string;
  date: string;
  author: string;
  image: string;
  href?: string;
}

interface Props {
  posts?: BlogPost[];
}

const defaultPosts: BlogPost[] = [
  {
    title: "Emotional fitness and the truth about feelings",
    category: "Insight",
    date: "November 9, 2025",
    author: "Antonina Devitska",
    image: "/images/blog-1.png",
    href: "/blog/emotional-fitness"
  },
  {
    title: "The Power of Positive Thinking Shift Mindset",
    category: "Tips & Trick",
    date: "November 10, 2025",
    author: "Antonina Devitska",
    image: "/images/blog-2.png",
    href: "/blog/positive-thinking"
  },
  {
    title: "Setting healthy boundaries that really work",
    category: "Strategies",
    date: "November 11, 2025",
    author: "Antonina Devitska",
    image: "/images/blog-3.png",
    href: "/blog/healthy-boundaries"
  },
  {
    title: "How to use your body to accelerate good choices",
    category: "Insight",
    date: "November 3, 2025",
    author: "Antonina Devitska",
    image: "/images/blog-4.png",
    href: "/blog/body-choices"
  }
];

const { posts = defaultPosts } = Astro.props;
---

<section class="blog-section">
  <div class="container">
    <div class="blog-header">
      <h2 class="blog-section-title">
        Exploring Education & Wellbeing:<br />
        Latest Articles
      </h2>
      <a href="/blog" class="btn btn-primary btn-small view-all-btn">
        View All
      </a>
    </div>
    
    <div class="blog-grid">
      {posts.map(post => (
        <BlogCard {...post} />
      ))}
    </div>
  </div>
</section>

<style>
  .blog-section {
    padding: 100px 0;
  }
  
  .blog-header {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    gap: 40px;
    margin-bottom: 60px;
    flex-wrap: wrap;
  }
  
  .blog-section-title {
    font-family: var(--font-primary);
    font-weight: 600;
    font-size: 42px;
    line-height: 1.3;
    color: var(--color-text-dark);
  }
  
  .view-all-btn {
    background: var(--color-primary);
    color: var(--color-white);
    border-radius: 8px;
    font-size: 16px;
    padding: 16px 25px;
    flex-shrink: 0;
  }
  
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
  }
  
  @media (max-width: 1100px) {
    .blog-section-title {
      font-size: 36px;
    }
  }
  
  @media (max-width: 968px) {
    .blog-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 24px;
    }
    
    .blog-section-title {
      font-size: 32px;
    }
    
    .blog-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }
  }
  
  @media (max-width: 480px) {
    .blog-section {
      padding: 60px 0;
    }
    
    .blog-section-title {
      font-size: 26px;
    }
    
    .view-all-btn {
      width: 100%;
      text-align: center;
    }
  }
</style>

