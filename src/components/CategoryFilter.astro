---
interface Category {
  id: string;
  name: string;
  active?: boolean;
}

interface Props {
  categories: Category[];
}

const { categories } = Astro.props;
---

<div class="category-filter">
  {categories.map(category => (
    <button 
      class:list={['filter-btn', { active: category.active }]}
      data-category={category.id}
    >
      {category.name}
    </button>
  ))}
</div>

<style>
  .category-filter {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    justify-content: flex-start;
    max-width: 100%;
  }
  
  .filter-btn {
    padding: 14px 40px;
    border: 2px solid var(--color-primary);
    border-radius: 40px;
    background: transparent;
    color: var(--color-primary);
    font-family: var(--font-primary);
    font-weight: 500;
    font-size: 16px;
    line-height: 1.5;
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: center;
    white-space: nowrap;
    min-width: 200px;
    flex: 0 1 auto;
  }
  
  .filter-btn:hover {
    background: var(--color-primary);
    color: var(--color-white);
  }
  
  .filter-btn.active {
    background: var(--color-primary);
    color: var(--color-white);
  }
  
  @media (max-width: 968px) {
    .category-filter {
      gap: 12px;
    }
    
    .filter-btn {
      padding: 12px 24px;
      font-size: 16px;
      min-width: 150px;
    }
  }
  
  @media (max-width: 600px) {
    .category-filter {
      gap: 10px;
      flex-direction: column;
      align-items: stretch;
    }

    .filter-btn {
      padding: 10px 16px;
      font-size: 14px;
      min-width: auto;
      max-width: 100%;
      white-space: normal;
      overflow-wrap: anywhere;
      word-break: break-word;
      hyphens: auto;
      width: 100%;
      flex: 0 0 auto;
    }
  }
</style>








