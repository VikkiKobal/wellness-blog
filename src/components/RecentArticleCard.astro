---
interface Props {
  title: string;
  excerpt: string;
  date: string;
  author: string;
  image: string;
  href?: string;
}

const { title, excerpt, date, author, image, href = '#' } = Astro.props;
---

<article class="recent-article-card">
  <a href={href} class="card-link">
    <div class="card-image">
      <img src={image} alt={title} />
    </div>
    <h3 class="card-title">{title}</h3>
    <p class="card-excerpt">{excerpt}</p>
    <div class="card-meta">
      <span class="meta-item author">
        <svg width="11" height="12" viewBox="0 0 11 12" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M5.5 6C6.16304 6 6.79893 5.73661 7.26777 5.26777C7.73661 4.79893 8 4.16304 8 3.5C8 2.83696 7.73661 2.20107 7.26777 1.73223C6.79893 1.26339 6.16304 1 5.5 1C4.83696 1 4.20107 1.26339 3.73223 1.73223C3.26339 2.20107 3 2.83696 3 3.5C3 4.16304 3.26339 4.79893 3.73223 5.26777C4.20107 5.73661 4.83696 6 5.5 6ZM5.5 7C3.29 7 1.5 8.79 1.5 11H9.5C9.5 8.79 7.71 7 5.5 7Z" fill="currentColor"/>
        </svg>
        {author}
      </span>
      <span class="meta-item date">
        <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9.5 2H8.5V1.5C8.5 1.36739 8.44732 1.24021 8.35355 1.14645C8.25979 1.05268 8.13261 1 8 1C7.86739 1 7.74021 1.05268 7.64645 1.14645C7.55268 1.24021 7.5 1.36739 7.5 1.5V2H4.5V1.5C4.5 1.36739 4.44732 1.24021 4.35355 1.14645C4.25979 1.05268 4.13261 1 4 1C3.86739 1 3.74021 1.05268 3.64645 1.14645C3.55268 1.24021 3.5 1.36739 3.5 1.5V2H2.5C2.10218 2 1.72064 2.15804 1.43934 2.43934C1.15804 2.72064 1 3.10218 1 3.5V9.5C1 9.89782 1.15804 10.2794 1.43934 10.5607C1.72064 10.842 2.10218 11 2.5 11H9.5C9.89782 11 10.2794 10.842 10.5607 10.5607C10.842 10.2794 11 9.89782 11 9.5V3.5C11 3.10218 10.842 2.72064 10.5607 2.43934C10.2794 2.15804 9.89782 2 9.5 2ZM10 9.5C10 9.63261 9.94732 9.75979 9.85355 9.85355C9.75979 9.94732 9.63261 10 9.5 10H2.5C2.36739 10 2.24021 9.94732 2.14645 9.85355C2.05268 9.75979 2 9.63261 2 9.5V5H10V9.5ZM10 4H2V3.5C2 3.36739 2.05268 3.24021 2.14645 3.14645C2.24021 3.05268 2.36739 3 2.5 3H3.5V3.5C3.5 3.63261 3.55268 3.75979 3.64645 3.85355C3.74021 3.94732 3.86739 4 4 4C4.13261 4 4.25979 3.94732 4.35355 3.85355C4.44732 3.75979 4.5 3.63261 4.5 3.5V3H7.5V3.5C7.5 3.63261 7.55268 3.75979 7.64645 3.85355C7.74021 3.94732 7.86739 4 8 4C8.13261 4 8.25979 3.94732 8.35355 3.85355C8.44732 3.75979 8.5 3.63261 8.5 3.5V3H9.5C9.63261 3 9.75979 3.05268 9.85355 3.14645C9.94732 3.24021 10 3.36739 10 3.5V4Z" fill="currentColor"/>
        </svg>
        {date}
      </span>
    </div>
  </a>
</article>

<style>
  .recent-article-card {
    background: var(--color-background);
    border-radius: 5px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }
  
  .recent-article-card:hover {
    transform: translateY(-4px);
  }
  
  .card-link {
    display: block;
  }
  
  .card-image {
    width: 100%;
    height: 183px;
    overflow: hidden;
    border-radius: 5px;
    margin-bottom: 16px;
  }
  
  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }
  
  .recent-article-card:hover .card-image img {
    transform: scale(1.05);
  }
  
  .card-title {
    font-family: var(--font-primary);
    font-weight: 600;
    font-size: 16px;
    line-height: 1.56;
    color: var(--color-text-dark);
    margin-bottom: 12px;
  }
  
  .card-excerpt {
    font-family: var(--font-secondary);
    font-weight: 400;
    font-size: 12px;
    line-height: 2;
    color: var(--color-gray);
    margin-bottom: 16px;
  }
  
  .card-meta {
    display: flex;
    gap: 16px;
  }
  
  .meta-item {
    display: flex;
    align-items: center;
    gap: 6px;
    font-family: var(--font-secondary);
    font-weight: 400;
    font-size: 10px;
    line-height: 2.96;
    color: var(--color-text-black);
  }
  
  .meta-item svg {
    color: var(--color-primary);
    width: 11px;
    height: 12px;
  }
  
  @media (max-width: 768px) {
    .card-image {
      height: 160px;
    }
  }
</style>











