---
interface Props {
  title: string;
  date: string;
  author: string;
  image: string;
  href?: string;
}

const { title, date, author, image, href = '#' } = Astro.props;
---

<article class="blog-article-card">
  <div class="article-image">
    <img src={image} alt={title} />
  </div>
  <div class="article-content">
    <div class="article-meta">
      <span class="meta-item">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
          <circle cx="12" cy="7" r="4"></circle>
        </svg>
        {author}
      </span>
      <span class="meta-item">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="16" y1="2" x2="16" y2="6"></line>
          <line x1="8" y1="2" x2="8" y2="6"></line>
          <line x1="3" y1="10" x2="21" y2="10"></line>
        </svg>
        {date}
      </span>
    </div>
    <h3 class="article-title">{title}</h3>
    <a href={href} class="article-link">
      Read â†’
    </a>
  </div>
</article>

<style>
  .blog-article-card {
    display: flex;
    background: var(--color-background);
    border-radius: 0 8px 8px 0;
    overflow: hidden;
    box-shadow: 0 5px 30px 0 rgba(39, 35, 74, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    height: 157px;
  }
  
  .blog-article-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 40px 0 rgba(39, 35, 74, 0.15);
  }
  
  .article-image {
    width: 190px;
    height: 157px;
    flex-shrink: 0;
    overflow: hidden;
  }
  
  .article-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.4s ease;
  }
  
  .blog-article-card:hover .article-image img {
    transform: scale(1.05);
  }
  
  .article-content {
    flex: 1;
    padding: 20px 30px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
  }
  
  .article-meta {
    display: flex;
    flex-direction: column;
    gap: 4px;
    position: absolute;
    bottom: 20px;
    left: 30px;
  }
  
  .meta-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: var(--font-secondary);
    font-weight: 400;
    font-size: 12px;
    line-height: 1.5;
    color: var(--color-gray);
  }
  
  .meta-item svg {
    flex-shrink: 0;
    width: 14px;
    height: 14px;
    color: var(--color-primary);
  }
  
  .article-title {
    font-family: var(--font-primary);
    font-weight: 600;
    font-size: 16px;
    line-height: 1.56;
    color: var(--color-text-dark);
    margin-bottom: auto;
    max-width: 314px;
  }
  
  .article-link {
    position: absolute;
    bottom: 20px;
    right: 30px;
    display: inline-flex;
    align-items: center;
    padding: 4px 20px;
    background: var(--color-primary);
    border: 0.5px solid var(--color-primary);
    border-radius: 5px;
    font-family: var(--font-secondary);
    font-weight: 400;
    font-size: 12px;
    line-height: 2.47;
    letter-spacing: 0.04em;
    color: var(--color-white);
    transition: all 0.3s ease;
  }
  
  .article-link:hover {
    background: var(--color-primary-dark);
    transform: translateX(4px);
  }
  
  @media (max-width: 600px) {
    .blog-article-card {
      flex-direction: column;
      height: auto;
    }
    
    .article-image {
      width: 100%;
      height: 180px;
    }
    
    .article-content {
      padding: 20px;
      position: relative;
      min-height: 160px;
    }
    
    .article-meta {
      position: static;
      margin-top: 16px;
    }
    
    .article-link {
      position: static;
      align-self: flex-start;
      margin-top: 16px;
    }
  }
</style>













