---
interface Props {
  title: string;
  category: string;
  date: string;
  author: string;
  image: string;
  href?: string;
}

const { title, category, date, author, image, href = '#' } = Astro.props;
---

<article class="blog-card">
  <a href={href} class="blog-card-link">

    <!-- IMAGE -->
    <div class="blog-image">
      <img src={image} alt={title} />
      <span class="blog-category">{category}</span>
    </div>

    <!-- CONTENT -->
    <div class="blog-footer">
      <h3 class="blog-title">{title}</h3>
      
      <div class="blog-meta">
        <span class="meta-item">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
          {author}
        </span>

        <span class="meta-item">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
          {date}
        </span>
      </div>
    </div>

  </a>
</article>

<style>
  .blog-card {
    background: var(--color-green-card);
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 5px 30px rgba(39, 35, 74, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .blog-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 40px rgba(39, 35, 74, 0.15);
  }

  .blog-card-link {
    display: flex;
    height: 100%;
    text-decoration: none;
  }

  .blog-image {
    position: relative;
    width: 300px;
    height: 270px;
    flex-shrink: 0;
    overflow: hidden;
  }

  .blog-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.4s ease;
  }

  .blog-card:hover .blog-image img {
    transform: scale(1.05);
  }

  .blog-category {
    position: absolute;
    top: 20px;
    left: 20px;
    background: var(--color-primary);
    color: #fff;
    padding: 6px 14px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    z-index: 2;
  }

  /* CONTENT AREA */
  .blog-footer {
    flex: 1;
    padding: 30px 24px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background: var(--color-white);
  }

  .blog-title {
    font-family: var(--font-primary);
    font-size: 20px;
    line-height: 1.4;
    font-weight: 600;
    color: var(--color-text-dark);
    margin: 0 0 20px 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .blog-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    padding-top: 15px;
    border-top: 1px solid #eee;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
    color: var(--color-gray);
  }

  .meta-item svg {
    color: var(--color-primary);
  }

  @media (max-width: 1270px) {
    .blog-card-link {
      flex-direction: column;
    }

    .blog-image {
      width: 100%;
      height: 220px;
    }
    
    .blog-footer {
      padding: 24px;
    }

    .blog-title {
      font-size: 18px;
    }
  }

  @media (max-width: 968px) {
    .blog-image {
      height: 250px;
    }
  }

  @media (max-width: 768px) {
    .blog-image {
      height: 200px;
    }
  }
</style>
