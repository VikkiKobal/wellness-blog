---
interface Props {
  title: string;
  category: string;
  date: string;
  author: string;
  image: string;
  href?: string;
}

const { title, category, date, author, image, href = '#' } = Astro.props;
---

<article class="blog-card">
  <a href={href} class="blog-card-link">

    <!-- IMAGE -->
    <div class="blog-image">
      <img src={image} alt={title} />
      <span class="blog-category">{category}</span>
    </div>

    <!-- CONTENT -->
    <div class="blog-footer">
      <h3 class="blog-title">{title}</h3>
      
      <div class="blog-meta">
        <span class="meta-item">
          <svg width="11" height="12" viewBox="0 0 11 12" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M5.5 6C6.16304 6 6.79893 5.73661 7.26777 5.26777C7.73661 4.79893 8 4.16304 8 3.5C8 2.83696 7.73661 2.20107 7.26777 1.73223C6.79893 1.26339 6.16304 1 5.5 1C4.83696 1 4.20107 1.26339 3.73223 1.73223C3.26339 2.20107 3 2.83696 3 3.5C3 4.16304 3.26339 4.79893 3.73223 5.26777C4.20107 5.73661 4.83696 6 5.5 6Z" fill="#96989B"/>
          </svg>
          {author}
        </span>

        <span class="meta-item">
          <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9.5 2H8.5V1.5C8.5 1.36739 8.44732 1.24021 8.35355 1.14645C8.25979 1.05268 8.13261 1 8 1C7.86739 1 7.74021 1.05268 7.64645 1.14645C7.55268 1.24021 7.5 1.36739 7.5 1.5V2H4.5V1.5C4.5 1.36739 4.44732 1.24021 4.35355 1.14645C4.25979 1.05268 4.13261 1 4 1C3.86739 1 3.74021 1.05268 3.64645 1.14645C3.55268 1.24021 3.5 1.36739 3.5 1.5V2H2.5C2.10218 2 1.72064 2.15804 1.43934 2.43934C1.15804 2.72064 1 3.10218 1 3.5V9.5C1 9.89782 1.15804 10.2794 1.43934 10.5607C1.72064 10.842 2.10218 11 2.5 11H9.5C9.89782 11 10.2794 10.842 10.5607 10.5607C10.842 10.2794 11 9.89782 11 9.5V3.5C11 3.10218 10.842 2.72064 10.5607 2.43934C10.2794 2.15804 9.89782 2 9.5 2Z" fill="#96989B"/>
          </svg>
          {date}
        </span>
      </div>
    </div>

  </a>
</article>

<style>
  .blog-card {
    background: var(--color-green-card);
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 5px 30px rgba(39, 35, 74, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .blog-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 40px rgba(39, 35, 74, 0.15);
  }

  .blog-card-link {
    display: flex;
    height: 100%;
    text-decoration: none;
  }

  .blog-image {
    position: relative;
    width: 300px;
    height: 270px;
    flex-shrink: 0;
    overflow: hidden;
  }

  .blog-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .blog-card:hover .blog-image img {
    transform: scale(1.05);
  }

  .blog-category {
    position: absolute;
    top: 20px;
    left: 20px;
    background: var(--color-primary);
    color: #fff;
    padding: 6px 14px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    z-index: 2;
  }

  /* CONTENT AREA */
  .blog-footer {
    flex: 1;
    padding: 30px 24px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background: var(--color-white);
  }

  .blog-title {
    font-family: var(--font-primary);
    font-size: 20px;
    line-height: 1.4;
    font-weight: 600;
    color: var(--color-text-dark);
    margin: 0 0 20px 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .blog-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    padding-top: 15px;
    border-top: 1px solid #eee;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 13px;
    color: var(--color-gray);
  }

  @media (max-width: 1270px) {
    .blog-card-link {
      flex-direction: column;
    }

    .blog-image {
      width: 100%;
      height: 220px;
    }
    
    .blog-footer {
      padding: 24px;
    }

    .blog-title {
      font-size: 18px;
    }
  }

  @media (max-width: 968px) {
    .blog-image {
      height: 250px;
    }
  }

  @media (max-width: 768px) {
    .blog-image {
      height: 200px;
    }
  }
</style>
