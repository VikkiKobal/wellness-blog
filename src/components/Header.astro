---
interface Props {
  currentPage?: string;
}

const { currentPage = 'home' } = Astro.props;

const navItems = [
  { name: 'Home', href: '/', id: 'home' },
  { name: 'About Me', href: '/about', id: 'about' },
  { name: 'Services', href: '/courses', id: 'services' },
  { name: 'Projects', href: '/projects', id: 'projects' },
  { name: 'Blog', href: '/blog', id: 'blog' },
];
---

<header class="header">
  <div class="container header-container">
    <a href="/" class="logo">
      <svg class="logo-icon" width="131" height="84" viewBox="0 0 131 84" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="42" cy="42" r="40" fill="#8D77AB"/>
        <circle cx="89" cy="42" r="40" fill="#BAD8B6"/>
      </svg>
      <span class="logo-text">Antonina Devitska</span>
    </a>
    
    <nav class="nav">
      <ul class="nav-list">
        {navItems.map(item => (
          <li class="nav-item">
            <a 
              href={item.href} 
              class:list={['nav-link', { active: currentPage === item.id }]}
            >
              {item.name}
            </a>
          </li>
        ))}
      </ul>
    </nav>
    
    <a href="/contact" class="contact-btn">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M3 8L10.89 13.26C11.2187 13.4793 11.6049 13.5963 12 13.5963C12.3951 13.5963 12.7813 13.4793 13.11 13.26L21 8M5 19H19C19.5304 19 20.0391 18.7893 20.4142 18.4142C20.7893 18.0391 21 17.5304 21 17V7C21 6.46957 20.7893 5.96086 20.4142 5.58579C20.0391 5.21071 19.5304 5 19 5H5C4.46957 5 3.96086 5.21071 3.58579 5.58579C3.21071 5.96086 3 6.46957 3 7V17C3 17.5304 3.21071 18.0391 3.58579 18.4142C3.96086 18.7893 4.46957 19 5 19Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <span>Contact Me</span>
    </a>
    
    <button class="mobile-menu-btn" aria-label="Toggle menu" id="mobile-menu-toggle">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>

  <!-- Mobile Nav Overlay -->
  <div class="mobile-nav" id="mobile-nav">
    <div class="mobile-nav-content">
      <button class="mobile-close-btn" id="mobile-close-btn">&times;</button>
      <ul class="mobile-nav-list">
        {navItems.map(item => (
          <li>
            <a 
              href={item.href} 
              class:list={['mobile-nav-link', { active: currentPage === item.id }]}
            >
              {item.name}
            </a>
          </li>
        ))}
        <li>
          <a href="/contact" class="mobile-contact-btn">Contact Me</a>
        </li>
      </ul>
    </div>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 20px 0;
    background: var(--color-background);
    transition: all 0.3s ease;
  }
  
  .header.scrolled {
    padding: 15px 0;
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.08);
  }
  
  .header-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
  }
  
  .logo {
    display: flex;
    align-items: center;
    gap: 12px;
    z-index: 1001;
  }
  
  .logo-icon {
    width: 44px;
    height: 28px;
  }
  
  .logo-text {
    font-family: var(--font-primary);
    font-weight: 600;
    font-size: 18px;
    color: var(--color-text-dark);
  }
  
  .nav {
    flex: 1;
    display: flex;
    justify-content: center;
  }
  
  .nav-list {
    display: flex;
    align-items: center;
    gap: 32px;
    list-style: none;
  }
  
  .nav-link {
    font-family: var(--font-primary);
    font-weight: 500;
    font-size: 18px;
    color: var(--color-text-black);
    position: relative;
    padding: 4px 0;
    transition: color 0.3s ease;
  }
  
  .nav-link.active {
    color: var(--color-primary);
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-primary);
    transition: width 0.3s ease;
  }
  
  .nav-link:hover::after,
  .nav-link.active::after {
    width: 100%;
  }
  
  .contact-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: var(--color-primary);
    color: var(--color-white);
    border-radius: 12px;
    font-family: var(--font-primary);
    font-weight: 600;
    font-size: 18px;
    transition: all 0.3s ease;
  }
  
  .contact-btn:hover {
    background: var(--color-primary-dark);
    transform: translateY(-2px);
  }
  
  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    gap: 6px;
    padding: 10px;
    cursor: pointer;
    z-index: 1001;
  }
  
  .mobile-menu-btn span {
    display: block;
    width: 28px;
    height: 2px;
    background: var(--color-text-dark);
    transition: all 0.3s ease;
  }

  /* Mobile Nav styles */
  .mobile-nav {
    position: fixed;
    top: 0;
    right: -100%;
    width: 100%;
    height: 100vh;
    background: var(--color-background);
    z-index: 2000;
    transition: right 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    display: flex;
    justify-content: flex-end;
  }

  .mobile-nav.is-open {
    right: 0;
  }

  .mobile-nav-content {
    width: 100%;
    max-width: 300px;
    height: 100%;
    background: var(--color-white);
    padding: 40px 24px;
    display: flex;
    flex-direction: column;
    box-shadow: -10px 0 30px rgba(0,0,0,0.1);
  }

  .mobile-close-btn {
    align-self: flex-end;
    font-size: 40px;
    color: var(--color-text-dark);
    line-height: 1;
    margin-bottom: 40px;
  }

  .mobile-nav-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .mobile-nav-link {
    font-size: 24px;
    font-weight: 600;
    color: var(--color-text-dark);
  }

  .mobile-nav-link.active {
    color: var(--color-primary);
  }

  .mobile-contact-btn {
    margin-top: 20px;
    display: inline-block;
    padding: 14px 28px;
    background: var(--color-primary);
    color: white;
    border-radius: 12px;
    font-weight: 600;
    text-align: center;
    font-size: 20px;
  }
  
  @media (max-width: 1024px) {
    .nav-list {
      gap: 20px;
    }
    
    .nav-link {
      font-size: 16px;
    }
  }
  
  @media (max-width: 850px) {
    .nav {
      display: none;
    }
    
    .contact-btn {
      display: none;
    }
    
    .mobile-menu-btn {
      display: flex;
    }
  }
</style>

<script>
  const header = document.querySelector('.header');
  const toggleBtn = document.getElementById('mobile-menu-toggle');
  const closeBtn = document.getElementById('mobile-close-btn');
  const mobileNav = document.getElementById('mobile-nav');
  
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }
  });

  if (toggleBtn && mobileNav && closeBtn) {
    toggleBtn.addEventListener('click', () => {
      mobileNav.classList.add('is-open');
      document.body.style.overflow = 'hidden';
    });

    closeBtn.addEventListener('click', () => {
      mobileNav.classList.remove('is-open');
      document.body.style.overflow = '';
    });
  }
</script>

