---
interface Props {
  title: string;
  breadcrumb?: { label: string; href: string }[];
}

const { title, breadcrumb = [] } = Astro.props;
---

<section class="page-hero">
  <div class="container">
    <h1 class="page-title">{title}</h1>
    {breadcrumb.length > 0 && (
      <nav class="breadcrumb" aria-label="Breadcrumb">
        {breadcrumb.map((item, index) => (
          <>
            {index > 0 && <span class="separator">â€º</span>}
            {index === breadcrumb.length - 1 ? (
              <span class="current">{item.label}</span>
            ) : (
              <a href={item.href}>{item.label}</a>
            )}
          </>
        ))}
      </nav>
    )}
  </div>
</section>

<style>
  .page-hero {
    background: var(--gradient-banner);
    padding: 100px 0 60px;
    margin-top: 90px;
  }
  
  .page-title {
    font-family: var(--font-primary);
    font-weight: 600;
    font-size: 36px;
    line-height: 2.07;
    color: var(--color-white);
    text-align: center;
    margin-bottom: 16px;
  }
  
  .breadcrumb {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    font-family: var(--font-primary);
    font-weight: 500;
    font-size: 20px;
    color: var(--color-white);
  }
  
  .breadcrumb a {
    color: var(--color-white);
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }
  
  .breadcrumb a:hover {
    opacity: 1;
  }
  
  .breadcrumb .separator {
    opacity: 0.6;
  }
  
  .breadcrumb .current {
    opacity: 1;
  }
  
  @media (max-width: 768px) {
    .page-hero {
      padding: 80px 0 40px;
    }
    
    .page-title {
      font-size: 28px;
    }
    
    .breadcrumb {
      font-size: 16px;
    }
  }
</style>

