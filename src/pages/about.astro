---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import PageHero from '../components/PageHero.astro';
import Footer from '../components/Footer.astro';

const breadcrumb = [
  { label: 'Home', href: '/' },
  { label: 'About Me', href: '/about' }
];

const socialLinks = [
  { 
    name: 'LinkedIn', 
    href: 'https://linkedin.com',
    icon: `<svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M16.5 0H1.5C0.675 0 0 0.675 0 1.5V16.5C0 17.325 0.675 18 1.5 18H16.5C17.325 18 18 17.325 18 16.5V1.5C18 0.675 17.325 0 16.5 0ZM5.37 15.375H2.67V6.75H5.37V15.375ZM4.02 5.55C3.135 5.55 2.43 4.845 2.43 3.96C2.43 3.075 3.135 2.37 4.02 2.37C4.905 2.37 5.61 3.075 5.61 3.96C5.61 4.845 4.905 5.55 4.02 5.55ZM15.375 15.375H12.675V11.175C12.675 10.14 12.66 8.82 11.25 8.82C9.825 8.82 9.615 9.945 9.615 11.1V15.375H6.915V6.75H9.51V7.95H9.555C9.915 7.275 10.785 6.555 12.09 6.555C14.82 6.555 15.375 8.37 15.375 10.71V15.375Z" fill="currentColor"/>
    </svg>`
  },
  { 
    name: 'Facebook', 
    href: 'https://facebook.com',
    icon: `<svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M18 9C18 4.02975 13.9702 0 9 0C4.02975 0 0 4.02975 0 9C0 13.4925 3.29025 17.2162 7.59375 17.8912V11.6016H5.30859V9H7.59375V7.01719C7.59375 4.76156 8.93625 3.51562 10.9931 3.51562C11.9775 3.51562 13.0078 3.69141 13.0078 3.69141V5.90625H11.873C10.755 5.90625 10.4062 6.60019 10.4062 7.3125V9H12.9023L12.5033 11.6016H10.4062V17.8912C14.7098 17.2162 18 13.4925 18 9Z" fill="currentColor"/>
    </svg>`
  },
  { 
    name: 'ResearchGate', 
    href: 'https://researchgate.net',
    icon: `<div class="rg-badge"><span class="rg-r">R</span><span class="rg-g">G</span></div>`
  }
];

const approachItems = [
  {
    title: 'Emotional Intelligence & SEL',
    image: '/images/approach/approach-1.png',
    description:
      'Developing emotional literacy and empathy so relationships and communication become fertile ground for learning.',
  },
  {
    title: 'Trauma-Informed & Resilience-Oriented Practices',
    image: '/images/approach/approach-2.png',
    description:
      'Grounded in trauma-aware principles that reduce stress and help educators grow through change with confidence.',
  },
  {
    title: 'Purposeful, Innovative Digital Pedagogy',
    image: '/images/approach/approach-3.png',
    description:
      'Designing accessible, engaging digital experiences that amplify human needs without overwhelming learners or educators.',
  },
  {
    title: 'Reflective & Future-Ready Learning Design',
    image: '/images/approach/approach-4.png',
    description:
      'Infusing mindful evidence-based strategies so educators build self-awareness and future-ready competencies.',
  },
];

const valueItems = [
  { title: 'Humanity', description: 'People first alwaysâ€”learning rooted in empathy and care.' },
  { title: 'Clarity', description: 'Simple, intentional communication that keeps focus on what matters.' },
  { title: 'Connection', description: 'Learning grows through relationships, trust, and shared reflection.' },
  { title: 'Resilience', description: 'Practices that keep educators and learners steady in change.' },
  { title: 'Innovation', description: 'Future-ready design blending technology with emotional intelligence.' },
];
---

<Layout title="About Me | Antonina Devitska" description="Learn more about Antonina Devitska - educator, mentor, and course designer with 19 years of experience.">
  <Header currentPage="about" />
  
  <main>
    <PageHero 
      title="Meet the Creator" 
      breadcrumb={breadcrumb}
    />
    
    <section class="about-section">
      <div class="container">
        <!-- Marquee Text -->
        <div class="marquee-container">
          <p class="marquee-text">ANTONINA DEVITSKA - MENTOR. TEACHER. TRAINER. FACILITATOR</p>
        </div>
        
        <div class="about-content">
          <div class="about-image">
            <img src="/images/about-portrait.png" alt="Antonina Devitska" />
          </div>
          
          <div class="about-text">
            <p>
              Passionate educator, facilitator, and mentor with 19 years of experience in international and university-level educational settings. Skilled in designing and delivering workshops, training sessions, and online courses for preservice and in-service teachers. Dedicated to empowering educators through innovative methods and practical, hands-on learning.
            </p>
            
            <div class="social-links">
              {socialLinks.map(link => (
                <a 
                  href={link.href} 
                  target="_blank" 
                  rel="noopener noreferrer" 
                  class="social-link"
                  aria-label={link.name}
                >
                  <Fragment set:html={link.icon} />
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

    <section class="approach-section">
      <div class="container">

      <div class="approach-intro">
        <h2>My Approach</h2>
      </div>

      <div class="featured-approach-grid">
        {approachItems.map(item => (
          <article class="featured-approach-card">
            <div class="featured-approach-image">
              <img src={item.image} alt={item.title} />
            </div>
            <div class="featured-approach-chip">
            </div>
            <h3>{item.title}</h3>
            <p>{item.description}</p>
          </article>
        ))}
      </div>

      <div class="approach-intro">
        <h2>My Values</h2>
      </div>

      <div class="values-grid">
        {valueItems.map(value => (
          <div class="value-pill">
            <h4>{value.title}</h4>
            <p>{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <Footer />
</Layout>

<style>
  .about-section {
    padding: 60px 0 100px;
  }
  
  .marquee-container {
    margin-bottom: 40px;
    overflow: hidden;
  }
  
  .marquee-text {
    font-family: var(--font-primary);
    font-weight: 500;
    font-size: 22px;
    line-height: 0.87;
    color: var(--color-primary);
    text-align: center;
    white-space: nowrap;
    letter-spacing: 0.05em;
    -webkit-text-stroke: 0.5px var(--color-primary);
  }
  
  .about-content {
    display: grid;
    grid-template-columns: 533px 1fr;
    gap: 80px;
    align-items: start;
  }
  
  .about-image {
    border-radius: 8px;
    overflow: hidden;
  }
  
  .about-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 8px;
    object-position: top;
  }
  
  .about-text {
    padding-top: 20px;
  }
  
  .about-text p {
    font-family: var(--font-primary);
    font-weight: 400;
    font-size: 24px;
    line-height: 1.8;
    color: var(--color-text-black);
    margin-bottom: 40px;
  }
  
  .social-links {
    display: flex;
    gap: 15px;
  }
  
  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 35px;
    height: 35px;
    border-radius: 50%;
    background: var(--color-white);
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  .social-link:hover {
    transform: translateY(-3px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }
  
  .social-link :global(svg) {
    width: 18px;
    height: 18px;
  }
  
  .social-link :global(svg path) {
    fill: var(--color-primary);
  }
  
  .social-link :global(.rg-badge) {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .social-link :global(.rg-r) {
    font-family: var(--font-accent);
    font-weight: 700;
    font-size: 18px;
    color: var(--color-primary);
    position: absolute;
    left: 4px;
    top: 2px;
  }
  
  .social-link :global(.rg-g) {
    font-family: var(--font-accent);
    font-weight: 700;
    font-size: 10px;
    color: var(--color-primary);
    position: absolute;
    right: 5px;
    top: 5px;
  }

  .approach-section {
    padding: 0px 0 120px;
    background: linear-gradient(180deg, rgba(255,255,255,0) 0%, rgba(234,246,243,0.6) 100%);
  }

  .approach-intro {
    max-width: 720px;
    margin: 0 auto 32px;
    text-align: center;
  }

  .approach-intro h2 {
    font-size: 34px;
    margin: 8px 0 0;
    text-align: center;
  }

  .section-label {
    font-size: 12px;
    letter-spacing: 0.4em;
    text-transform: uppercase;
    color: var(--color-text-muted);
  }

  .featured-approach-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 24px;
    margin-bottom: 40px;
  }

  .featured-approach-card {
    padding: 26px;
    border-radius: 28px;
    background: transparent;
    border: 1px solid var(--color-primary);
    box-shadow: 0 18px 45px rgba(17, 82, 62, 0.12);
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .featured-approach-image {
    width: 80px;
    height: 80px;
    border-radius: 16px;
    overflow: hidden;
    margin-bottom: 2px;
    align-self: center;
  }

  .featured-approach-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-approach-card h3 {
    margin: 0;
    font-size: 20px;
    text-align: center;
  }

  .featured-approach-card p {
    margin: 0;
    color: var(--color-text-muted);
    line-height: 1.6;
    text-align: center;
  }

  .featured-approach-chip {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-text-muted);
  }

  .featured-approach-tag {
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: var(--color-primary);
  }

  .approach-header {
    text-align: center;
    margin-bottom: 40px;
    max-width: 720px;
    margin-left: auto;
    margin-right: auto;
  }

  .approach-header p {
    font-size: 20px;
    line-height: 1.6;
    color: var(--color-text-muted);
  }

  .approach-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 24px;
  }

  .approach-card {
    padding: 28px;
    border-radius: 24px;
    background: transparent;
    border: 1px solid var(--color-primary);
    min-height: 220px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .approach-icon {
    font-size: 28px;
  }

  .approach-card h3 {
    margin: 0;
    font-size: 20px;
  }

  .approach-card p {
    margin: 0;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .values-grid {
    margin-top: 40px;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 16px;
  }

  .value-pill {
    padding: 18px;
    border-radius: 16px;
    background: var(--color-green-card);
    border: 1px dashed var(--color-primary);
  }

  .value-pill h4 {
    margin: 0 0 6px;
    font-size: 16px;
    text-transform: uppercase;
    letter-spacing: 0.2em;
  }

  .value-pill p {
    margin: 0;
    font-size: 14px;
    color: var(--color-text-muted);
  }
  
  @media (max-width: 1100px) {
    .about-content {
      grid-template-columns: 400px 1fr;
      gap: 50px;
    }
    
    .about-text p {
      font-size: 20px;
    }
  }
  
  @media (max-width: 900px) {
    .about-content {
      grid-template-columns: 1fr;
      gap: 40px;
    }
    
    .about-image {
      max-width: 500px;
      margin: 0 auto;
    }
    
    .marquee-text {
      font-size: 18px;
    }

    .social-links {
      justify-content: center;
    }
  }
  
  @media (max-width: 600px) {
    .about-section {
      padding: 40px 0 60px;
    }
    
    .about-text p {
      font-size: 18px;
      line-height: 1.8;
    }

    /* On phones this text must never be clipped */
    .marquee-container {
      overflow: visible;
    }
    
    .marquee-text {
      font-size: 14px;
      line-height: 1.3;
      white-space: normal;
      padding: 0 8px;
    }
  }
</style>

