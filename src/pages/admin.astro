---
// Standalone admin page - no header/footer needed
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Panel | Antonina Devitska</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=PT+Serif:wght@700&family=Public+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <!-- Login Panel -->
  <div id="login-panel" class="login-container">
    <div class="login-card">
      <div class="login-header">
        <div class="logo">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M2 17L12 22L22 17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M2 12L12 17L22 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <h1>Admin Panel</h1>
        <p>Antonina Devitska Wellbeing Blog</p>
      </div>

      <form id="email-login-form" class="login-form">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required placeholder="admin@example.com" />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" required placeholder="••••••••" />
        </div>
        <button type="submit" class="btn-primary">Sign In</button>
      </form>

      <div class="divider">
        <span>or</span>
      </div>

      <button id="google-sign-in" class="btn-google">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
          <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
          <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
          <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
          <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
        </svg>
        Sign In with Google
      </button>

      <p id="status-message" class="status"></p>
    </div>
  </div>

  <!-- Admin Panel -->
  <div id="admin-panel" class="admin-container" hidden>
    <div id="sidebar-overlay" class="sidebar-overlay"></div>
    
    <header class="mobile-header">
      <div class="logo">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
          <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="var(--color-primary)" stroke-width="2"/>
        </svg>
        <div class="logo-title">ADMIN</div>
      </div>
      <button id="mobile-menu-toggle" class="mobile-nav-toggle">
        <span style="font-size: 14px; font-weight: 700; color: var(--color-primary);">MENU</span>
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>
    </header>

    <!-- Sidebar -->
    <aside id="admin-sidebar" class="sidebar">
      <div class="sidebar-header">
        <div class="logo">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
            <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="currentColor" stroke-width="2"/>
            <path d="M2 17L12 22L22 17" stroke="currentColor" stroke-width="2"/>
            <path d="M2 12L12 17L22 12" stroke="currentColor" stroke-width="2"/>
          </svg>
          <div>
            <div class="logo-title">Admin Panel</div>
            <div class="logo-subtitle">Antonina Devitska</div>
          </div>
        </div>
        <button id="sidebar-close" class="mobile-nav-toggle">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>
      </div>

      <nav class="sidebar-nav">
        <button class="nav-item active" data-tab="articles">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" stroke="currentColor" stroke-width="2"/>
            <polyline points="14 2 14 8 20 8" stroke="currentColor" stroke-width="2"/>
            <line x1="16" y1="13" x2="8" y2="13" stroke="currentColor" stroke-width="2"/>
            <line x1="16" y1="17" x2="8" y2="17" stroke="currentColor" stroke-width="2"/>
            <line x1="10" y1="9" x2="8" y2="9" stroke="currentColor" stroke-width="2"/>
          </svg>
          <span>Blog Articles</span>
        </button>
        <button class="nav-item" data-tab="courses">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
            <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z" stroke="currentColor" stroke-width="2"/>
            <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z" stroke="currentColor" stroke-width="2"/>
          </svg>
          <span>Courses</span>
        </button>
        <button class="nav-item" data-tab="categories">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
            <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z" stroke="currentColor" stroke-width="2"/>
          </svg>
          <span>Categories</span>
        </button>
        <button class="nav-item" data-tab="projects">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" stroke="currentColor" stroke-width="2"/>
            <polyline points="9 22 9 12 15 12 15 22" stroke="currentColor" stroke-width="2"/>
          </svg>
          <span>Projects</span>
        </button>
        <button class="nav-item" data-tab="certs">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
            <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="currentColor" stroke-width="2"/>
            <path d="M12 22L2 17L12 12L22 17L12 22Z" stroke="currentColor" stroke-width="2"/>
            <path d="M2 12V17" stroke="currentColor" stroke-width="2"/>
            <path d="M22 12V17" stroke="currentColor" stroke-width="2"/>
            <path d="M12 12V22" stroke="currentColor" stroke-width="2"/>
          </svg>
          <span>Certificates</span>
        </button>
      </nav>

      <div class="sidebar-footer">
        <button id="sign-out-btn" class="btn-signout">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" stroke="currentColor" stroke-width="2"/>
            <polyline points="16 17 21 12 16 7" stroke="currentColor" stroke-width="2"/>
            <line x1="21" y1="12" x2="9" y2="12" stroke="currentColor" stroke-width="2"/>
          </svg>
          <span>Sign Out</span>
        </button>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">

      <!-- Articles Tab -->
      <div id="articles-tab" class="tab-content active">
        <div class="content-section">
          <h2>New Article</h2>
          <form id="article-form" class="content-form">
            <input type="hidden" id="article-id" name="id" />
            
            <div class="form-group">
              <label>Title *</label>
              <input type="text" name="title" required placeholder="Enter article title" />
            </div>

            <div class="form-group">
              <label>Content (Markdown) *</label>
              <textarea name="content" rows="12" required placeholder="Write your article content in Markdown..."></textarea>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label>Author</label>
                <input type="text" name="author" value="Antonina Devitska" />
              </div>

              <div class="form-group">
                <label>Date *</label>
                <input type="date" name="date" required />
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label>Category</label>
                <input type="text" name="category" placeholder="e.g., Wellbeing, Education" />
              </div>

              <div class="form-group checkbox-group">
                <label>
                  <input type="checkbox" name="featured" />
                  <span>Featured Article</span>
                </label>
              </div>
            </div>

            <input type="hidden" name="image" id="article-image-url" />
            
            <div class="image-upload-section">
              <label>Article Image (optional)</label>
              <div class="image-upload-area" id="article-upload-area">
                <input type="file" id="article-image-upload" accept="image/*" style="display: none" />
                <div class="upload-placeholder" id="article-upload-placeholder">
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                    <path d="M21 15V19C21 19.5304 20.7893 20.0391 20.4142 20.4142C20.0391 20.7893 19.5304 21 19 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V15" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    <path d="M17 8L12 3L7 8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    <path d="M12 3V15" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                  </svg>
                  <p>Click to upload or drag and drop</p>
                  <span>Optional - will use default placeholder if skipped</span>
                </div>
                <div class="image-preview" id="article-image-preview" hidden>
                  <img src="" alt="Preview" />
                  <button type="button" class="remove-image" id="article-remove-image">✕</button>
                </div>
                <div class="upload-progress" id="article-upload-progress" hidden>
                  <div class="progress-bar">
                    <div class="progress-fill" id="article-progress-fill"></div>
                  </div>
                  <span id="article-upload-status">Uploading...</span>
                </div>
              </div>
            </div>

            <div class="form-actions">
              <button type="submit" class="btn-primary">Save Article</button>
              <button type="button" id="article-cancel-btn" class="btn-secondary" hidden>Cancel</button>
            </div>
          </form>
        </div>

        <div class="content-section">
          <h2>Published Articles</h2>
          <ul id="articles-list" class="content-list"></ul>
        </div>
      </div>

      <!-- Courses Tab -->
      <div id="courses-tab" class="tab-content">
        <div class="content-section">
          <h2>New Course</h2>
          <form id="course-form" class="content-form">
            <input type="hidden" id="course-id" name="id" />
            
            <div class="form-group">
              <label>Title *</label>
              <input type="text" name="title" required placeholder="Enter course title" />
            </div>

            <div class="form-group">
              <label>Description *</label>
              <textarea name="description" rows="3" required placeholder="Course description"></textarea>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label>Lessons *</label>
                <input type="text" name="lessons" required placeholder="e.g., 12 Lessons" />
              </div>

              <div class="form-group">
                <label>Duration *</label>
                <input type="text" name="duration" required placeholder="e.g., 4 Weeks" />
              </div>

              <div class="form-group">
                <label>Price *</label>
                <input type="text" name="price" required placeholder="e.g., $59" />
              </div>
            </div>

            <div class="form-group">
              <label>Category *</label>
              <select name="category" required>
                <option value="">Select category</option>
                <option value="featured">Featured Courses</option>
                <option value="training">Teacher Training & Workshops</option>
                <option value="mentorship">Mentorship & Consulting</option>
                <option value="other">Other Courses & Academic Programs</option>
                <option value="speaking">Speaking & Collaborations</option>
              </select>
            </div>

            <div class="form-group">
              <label>Who it's for (One per line) *</label>
              <textarea name="tags" rows="4" required placeholder="educators
leaders
anyone seeking balance"></textarea>
            </div>

            <input type="hidden" name="image" id="course-image-url" />
            
            <div class="image-upload-section">
              <label>Course Image (optional)</label>
              <div class="image-upload-area" id="course-upload-area">
                <input type="file" id="course-image-upload" accept="image/*" style="display: none" />
                <div class="upload-placeholder" id="course-upload-placeholder">
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                    <path d="M21 15V19C21 19.5304 20.7893 20.0391 20.4142 20.4142C20.0391 20.7893 19.5304 21 19 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V15" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    <path d="M17 8L12 3L7 8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    <path d="M12 3V15" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                  </svg>
                  <p>Click to upload or drag and drop</p>
                  <span>Optional - will use default placeholder if skipped</span>
                </div>
                <div class="image-preview" id="course-image-preview" hidden>
                  <img src="" alt="Preview" />
                  <button type="button" class="remove-image" id="course-remove-image">✕</button>
                </div>
                <div class="upload-progress" id="course-upload-progress" hidden>
                  <div class="progress-bar">
                    <div class="progress-fill" id="course-progress-fill"></div>
                  </div>
                  <span id="course-upload-status">Uploading...</span>
                </div>
              </div>
            </div>

            <div class="form-actions">
              <button type="submit" class="btn-primary">Save Course</button>
              <button type="button" id="course-cancel-btn" class="btn-secondary" hidden>Cancel</button>
            </div>
          </form>
        </div>

        <div class="content-section">
          <h2>Published Courses</h2>
          <ul id="courses-list" class="content-list"></ul>
        </div>
      </div>

      <!-- Categories Tab -->
      <div id="categories-tab" class="tab-content">
        <div class="content-section">
          <h2>New Category</h2>
          <form id="category-form" class="content-form">
            <input type="hidden" id="category-id" name="id" />
            <div class="form-group">
              <label>Name *</label>
              <input type="text" name="name" required placeholder="Enter category name" />
            </div>
            <div class="form-group">
              <label>Type *</label>
              <select name="type" required>
                <option value="course" selected>Course</option>
                <option value="blog">Blog</option>
              </select>
            </div>
            <div class="form-actions">
              <button type="submit" class="btn-primary">Save Category</button>
              <button type="button" id="category-cancel-btn" class="btn-secondary" hidden>Cancel</button>
            </div>
          </form>
        </div>

        <div class="content-section">
          <h2>Categories</h2>
          <ul id="categories-list" class="content-list"></ul>
        </div>
      </div>

      <!-- Projects Tab -->
      <div id="projects-tab" class="tab-content">
        <div class="content-section">
          <h2>New Project</h2>
          <form id="project-form" class="content-form">
            <input type="hidden" id="project-id" name="id" />
            
            <div class="form-group">
              <label>Title *</label>
              <input type="text" name="title" required placeholder="Enter project title" />
            </div>

            <div class="form-group">
              <label>Description *</label>
              <textarea name="description" rows="3" required placeholder="Short description"></textarea>
            </div>

            <div class="form-group">
              <label>Additional Detail (optional)</label>
              <textarea name="detail" rows="2" placeholder="Extra details or sub-description"></textarea>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label>Link Label (optional)</label>
                <input type="text" name="linkLabel" placeholder="e.g., Learn more" />
              </div>

              <div class="form-group">
                <label>Link URL (optional)</label>
                <input type="text" name="linkHref" placeholder="e.g., #details or https://..." />
              </div>
            </div>

            <input type="hidden" name="image" id="project-image-url" />
            
            <div class="image-upload-section">
              <label>Project Image (optional)</label>
              <div class="image-upload-area" id="project-upload-area">
                <input type="file" id="project-image-upload" accept="image/*" style="display: none" />
                <div class="upload-placeholder" id="project-upload-placeholder">
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                    <path d="M21 15V19C21 19.5304 20.7893 20.0391 20.4142 20.4142C20.0391 20.7893 19.5304 21 19 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V15" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    <path d="M17 8L12 3L7 8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    <path d="M12 3V15" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                  </svg>
                  <p>Click to upload or drag and drop</p>
                  <span>Recommended: Landscape orientation</span>
                </div>
                <div class="image-preview" id="project-image-preview" hidden>
                  <img src="" alt="Preview" />
                  <button type="button" class="remove-image" id="project-remove-image">✕</button>
                </div>
                <div class="upload-progress" id="project-upload-progress" hidden>
                  <div class="progress-bar">
                    <div class="progress-fill" id="project-progress-fill"></div>
                  </div>
                  <span id="project-upload-status">Uploading...</span>
                </div>
              </div>
            </div>

            <div class="form-actions">
              <button type="submit" class="btn-primary">Save Project</button>
              <button type="button" id="project-cancel-btn" class="btn-secondary" hidden>Cancel</button>
            </div>
          </form>
        </div>

        <div class="content-section">
          <h2>Project Cards</h2>
          <ul id="projects-list" class="content-list"></ul>
        </div>
      </div>

      <!-- Certificates Tab -->
      <div id="certs-tab" class="tab-content">
        <div class="content-section">
          <h2>New Certificate</h2>
          <form id="cert-form" class="content-form">
            <input type="hidden" id="cert-id" name="id" />
            
            <div class="form-group">
              <label>Certificate Title *</label>
              <input type="text" name="title" required placeholder="e.g., Advanced SEL Certification" />
            </div>

            <div class="form-row">
              <div class="form-group">
                <label>Issuer *</label>
                <input type="text" name="issuer" required placeholder="e.g., International SEL Association" />
              </div>

              <div class="form-group">
                <label>Year *</label>
                <input type="text" name="year" required placeholder="e.g., 2023" />
              </div>
            </div>

            <input type="hidden" name="image" id="cert-image-url" />
            
            <div class="image-upload-section">
              <label>Certificate Image (PNG/JPG)</label>
              <div class="image-upload-area" id="cert-upload-area">
                <input type="file" id="cert-image-upload" accept="image/*" style="display: none" />
                <div class="upload-placeholder" id="cert-upload-placeholder">
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                    <path d="M21 15V19C21 19.5304 20.7893 20.0391 20.4142 20.4142C20.0391 20.7893 19.5304 21 19 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V15" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    <path d="M17 8L12 3L7 8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    <path d="M12 3V15" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                  </svg>
                  <p>Click to upload or drag and drop</p>
                  <span>Upload the certificate scan or photo</span>
                </div>
                <div class="image-preview" id="cert-image-preview" hidden>
                  <img src="" alt="Preview" />
                  <button type="button" class="remove-image" id="cert-remove-image">✕</button>
                </div>
                <div class="upload-progress" id="cert-upload-progress" hidden>
                  <div class="progress-bar">
                    <div class="progress-fill" id="cert-progress-fill"></div>
                  </div>
                  <span id="cert-upload-status">Uploading...</span>
                </div>
              </div>
            </div>

            <div class="form-actions">
              <button type="submit" class="btn-primary">Save Certificate</button>
              <button type="button" id="cert-cancel-btn" class="btn-secondary" hidden>Cancel</button>
            </div>
          </form>
        </div>

        <div class="content-section">
          <h2>Your Certificates</h2>
          <ul id="certs-list" class="content-list"></ul>
        </div>
      </div>

      <!-- Global Status Message -->
      <div id="status-toast" class="status-toast"></div>
    </main>
  </div>

  <script>
    import '../scripts/admin.ts';
  </script>

  <style is:global>
    :root {
      --color-primary: #8D77AB;
      --color-primary-light: #a391bd;
      --color-primary-dark: #7a6798;
      --color-secondary: #BAD8B6;
      --color-bg: #F6F5F2;
      --color-white: #ffffff;
      --color-text: #01162C;
      --color-text-light: #6b7280;
      --color-border: #e5e7eb;
      --color-success: #BAD8B6;
      --color-error: #ef4444;
      --color-warning: #f59e0b;
      --color-card-bg: #E1EACD;
      
      --font-primary: 'Public Sans', sans-serif;
      --font-secondary: 'Inter', sans-serif;
      
      --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
      --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
      --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
      
      --gradient-primary: linear-gradient(135deg, #8D77AB 0%, #a391bd 100%);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: var(--font-secondary);
      background: var(--color-bg);
      color: var(--color-text);
      line-height: 1.6;
      overflow-x: hidden;
      position: relative;
    }

    body:has(.login-container:not([hidden])) .admin-container {
      display: none !important;
      visibility: hidden !important;
    }

    /* ===== LOGIN PAGE ===== */
    .login-container {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 24px;
      background: var(--gradient-primary);
    }

    .login-container[hidden] {
      display: none;
    }

    .login-card {
      background: var(--color-white);
      border-radius: 24px;
      padding: 48px;
      max-width: 440px;
      width: 100%;
      box-shadow: var(--shadow-xl);
    }

    .login-header {
      text-align: center;
      margin-bottom: 40px;
    }

    .login-header .logo {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 64px;
      height: 64px;
      background: var(--gradient-primary);
      border-radius: 16px;
      color: white;
      margin-bottom: 24px;
    }

    .login-header h1 {
      font-family: var(--font-primary);
      font-size: 32px;
      font-weight: 600;
      color: var(--color-text);
      margin-bottom: 8px;
    }

    .login-header p {
      color: var(--color-text-light);
      font-size: 15px;
    }

    .login-form {
      margin-bottom: 24px;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      display: block;
      font-weight: 600;
      font-size: 14px;
      margin-bottom: 8px;
      color: var(--color-text);
    }

    .form-group input,
    .form-group textarea,
    .form-group select {
      width: 100%;
      padding: 12px 16px;
      border: 1px solid var(--color-border);
      border-radius: 12px;
      font-family: var(--font-secondary);
      font-size: 15px;
      transition: all 0.3s ease;
      background: var(--color-white);
    }

    .form-group input:focus,
    .form-group textarea:focus,
    .form-group select:focus {
      outline: none;
      border-color: var(--color-primary);
      box-shadow: 0 0 0 4px rgba(17, 82, 62, 0.1);
    }

    .form-group textarea {
      resize: vertical;
      font-family: 'Courier New', monospace;
      line-height: 1.5;
    }

    .btn-primary {
      width: 100%;
      padding: 14px;
      background: var(--color-primary);
      color: white;
      border: none;
      border-radius: 12px;
      font-family: var(--font-secondary);
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      background: var(--color-primary-dark);
      transform: translateY(-1px);
      box-shadow: var(--shadow-lg);
    }

    .divider {
      display: flex;
      align-items: center;
      text-align: center;
      margin: 24px 0;
      color: var(--color-text-light);
      font-size: 14px;
    }

    .divider::before,
    .divider::after {
      content: '';
      flex: 1;
      border-bottom: 1px solid var(--color-border);
    }

    .divider span {
      padding: 0 16px;
    }

    .btn-google {
      width: 100%;
      padding: 14px;
      background: var(--color-white);
      color: var(--color-text);
      border: 1px solid var(--color-border);
      border-radius: 12px;
      font-family: var(--font-secondary);
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 12px;
    }

    .btn-google:hover {
      background: var(--color-bg);
      border-color: var(--color-primary);
    }

    .status {
      margin-top: 16px;
      padding: 12px;
      border-radius: 8px;
      font-size: 14px;
      text-align: center;
      display: none;
    }

    .status.show {
      display: block;
    }

    .status[data-error='true'] {
      background: #fee2e2;
      color: var(--color-error);
    }

    .status[data-success='true'] {
      background: #d1fae5;
      color: var(--color-success);
    }

    /* ===== ADMIN PANEL ===== */
    .admin-container {
      display: none;
      min-height: 100vh;
      background: var(--color-bg);
    }

    .admin-container:not([hidden]) {
      display: flex;
    }

    /* Sidebar */
    .sidebar {
      width: 280px;
      background: var(--color-white);
      border-right: 1px solid var(--color-border);
      display: flex;
      flex-direction: column;
      position: fixed;
      height: 100vh;
      left: 0;
      top: 0;
      box-shadow: var(--shadow-sm);
      visibility: visible;
      z-index: 100;
      transition: transform 0.3s ease;
    }

    .admin-container[hidden] .sidebar,
    .admin-container[hidden] .main-content {
      visibility: hidden;
      pointer-events: none;
    }

    .sidebar-header {
      padding: 24px 20px;
      border-bottom: 1px solid var(--color-border);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .sidebar .logo {
      display: flex;
      align-items: center;
      gap: 14px;
    }

    .mobile-nav-toggle {
      display: none;
      background: var(--color-bg);
      border: 1px solid var(--color-border);
      border-radius: 8px;
      color: var(--color-text);
      cursor: pointer;
      padding: 8px 12px;
      align-items: center;
      gap: 8px;
      transition: all 0.2s ease;
    }

    .mobile-nav-toggle:hover {
      background: var(--color-white);
      border-color: var(--color-primary);
    }

    .sidebar .logo svg {
      flex-shrink: 0;
      color: var(--color-primary);
    }

    .logo-title {
      font-family: var(--font-primary);
      font-size: 18px;
      font-weight: 600;
      color: var(--color-text);
      line-height: 1.2;
    }

    .logo-subtitle {
      font-family: var(--font-secondary);
      font-size: 13px;
      color: var(--color-text-light);
      margin-top: 2px;
    }

    .sidebar-nav {
      flex: 1;
      padding: 20px 16px;
      overflow-y: auto;
    }

    .nav-item {
      width: 100%;
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 12px 16px;
      background: none;
      border: none;
      border-radius: 12px;
      font-family: var(--font-secondary);
      font-size: 15px;
      font-weight: 500;
      color: var(--color-text-light);
      cursor: pointer;
      transition: all 0.3s ease;
      margin-bottom: 8px;
      text-align: left;
    }

    .nav-item:hover {
      background: var(--color-bg);
      color: var(--color-text);
    }

    .nav-item.active {
      background: rgba(141, 119, 171, 0.12);
      color: var(--color-primary);
    }

    .nav-item svg {
      flex-shrink: 0;
    }

    .sidebar-footer {
      padding: 16px;
      border-top: 1px solid var(--color-border);
    }

    .btn-signout {
      width: 100%;
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 12px 16px;
      background: var(--color-white);
      border: 1px solid var(--color-border);
      border-radius: 12px;
      font-family: var(--font-secondary);
      font-size: 15px;
      font-weight: 500;
      color: var(--color-text-light);
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .btn-signout:hover {
      background: #fee2e2;
      border-color: var(--color-error);
      color: var(--color-error);
    }

    /* Main Content */
    .main-content {
      flex: 1;
      margin-left: 280px;
      padding: 40px;
      max-width: 1400px;
      width: calc(100% - 280px);
    }

    .tab-content {
      display: none;
    }

    .tab-content.active {
      display: block;
      animation: fadeIn 0.3s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .content-section {
      background: var(--color-white);
      border-radius: 16px;
      padding: 32px;
      margin-bottom: 32px;
      box-shadow: var(--shadow-sm);
    }

    .content-section h2 {
      font-family: var(--font-primary);
      font-size: 24px;
      font-weight: 600;
      color: var(--color-text);
      margin-bottom: 24px;
    }

    /* Form Styles */
    .content-form {
      display: flex;
      flex-direction: column;
      gap: 24px;
    }

    .form-row {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
    }

    .checkbox-group {
      display: flex;
      align-items: center;
    }

    .checkbox-group label {
      display: flex;
      align-items: center;
      gap: 8px;
      cursor: pointer;
    }

    .checkbox-group input[type="checkbox"] {
      width: 20px;
      height: 20px;
      cursor: pointer;
    }

    .form-actions {
      display: flex;
      gap: 12px;
      padding-top: 8px;
      flex-wrap: wrap;
    }

    .content-form .btn-primary {
      width: auto;
      padding: 12px 32px;
      font-size: 15px;
    }

    .btn-secondary {
      padding: 12px 24px;
      background: var(--color-white);
      color: var(--color-text);
      border: 1px solid var(--color-border);
      border-radius: 12px;
      font-family: var(--font-secondary);
      font-size: 15px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .btn-secondary:hover {
      background: var(--color-bg);
    }

    /* Image Upload */
    .image-upload-section {
      margin: 8px 0;
    }

    .image-upload-section > label {
      display: block;
      font-weight: 600;
      font-size: 14px;
      margin-bottom: 12px;
      color: var(--color-text);
    }

    .image-upload-area {
      position: relative;
      border: 2px dashed var(--color-border);
      border-radius: 12px;
      background: var(--color-bg);
      overflow: hidden;
      transition: all 0.3s ease;
      cursor: pointer;
    }

    .image-upload-area:hover {
      border-color: var(--color-primary);
      background: rgba(141, 119, 171, 0.02);
    }

    .image-upload-area.drag-over {
      border-color: var(--color-primary);
      background: rgba(141, 119, 171, 0.05);
      transform: scale(1.01);
    }

    .upload-placeholder {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 48px 24px;
      text-align: center;
    }

    .upload-placeholder svg {
      color: var(--color-primary);
      opacity: 0.5;
      margin-bottom: 16px;
    }

    .upload-placeholder p {
      font-size: 16px;
      font-weight: 600;
      color: var(--color-text);
      margin-bottom: 8px;
    }

    .upload-placeholder span {
      font-size: 14px;
      color: var(--color-text-light);
    }

    .image-preview {
      position: relative;
      padding: 16px;
    }

    .image-preview img {
      width: 100%;
      max-height: 300px;
      object-fit: contain;
      border-radius: 8px;
    }

    .remove-image {
      position: absolute;
      top: 24px;
      right: 24px;
      width: 32px;
      height: 32px;
      border-radius: 50%;
      border: none;
      background: var(--color-error);
      color: white;
      font-size: 18px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
      box-shadow: var(--shadow-md);
    }

    .remove-image:hover {
      background: #dc2626;
      transform: scale(1.1);
    }

    .upload-progress {
      padding: 32px 24px;
    }

    .progress-bar {
      width: 100%;
      height: 8px;
      background: rgba(141, 119, 171, 0.1);
      border-radius: 4px;
      overflow: hidden;
      margin-bottom: 12px;
    }

    .progress-fill {
      height: 100%;
      background: var(--color-primary);
      transition: width 0.3s ease;
      width: 0%;
    }

    .upload-progress span {
      display: block;
      text-align: center;
      font-size: 14px;
      color: var(--color-primary);
      font-weight: 600;
    }

    /* Content List */
    .content-list {
      list-style: none;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .content-list li {
      padding: 0;
      border: 1px solid var(--color-border);
      border-radius: 12px;
      display: flex;
      justify-content: space-between;
      align-items: stretch;
      gap: 0;
      transition: all 0.3s ease;
      overflow: hidden;
      background: var(--color-white);
    }

    .content-list li:hover {
      box-shadow: var(--shadow-md);
      border-color: var(--color-primary);
    }

    .article-preview {
      flex-shrink: 0;
      width: 200px;
      overflow: hidden;
      background: var(--color-bg);
    }

    .article-thumbnail {
      width: 100%;
      height: 100%;
      min-height: 150px;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    .content-list li:hover .article-thumbnail {
      transform: scale(1.05);
    }

    .content-info {
      flex: 1;
      padding: 24px;
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .article-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      gap: 16px;
      flex-wrap: wrap;
    }

    .content-info strong {
      font-family: var(--font-primary);
      font-size: 20px;
      font-weight: 700;
      color: var(--color-text);
      line-height: 1.3;
      flex: 1;
      min-width: 200px;
    }

    .article-badges {
      display: flex;
      gap: 8px;
      flex-wrap: wrap;
      align-items: center;
    }

    .badge {
      display: inline-flex;
      align-items: center;
      padding: 6px 12px;
      border-radius: 8px;
      font-size: 13px;
      font-weight: 600;
      white-space: nowrap;
    }

    .badge-featured {
      background: #fef3c7;
      color: #92400e;
      border: 1px solid #fcd34d;
    }

    .badge-category {
      background: rgba(141, 119, 171, 0.12);
      color: var(--color-primary);
      border: 1px solid rgba(141, 119, 171, 0.2);
    }

    .badge-price {
      background: #ecfdf5;
      color: #065f46;
      border: 1px solid #a7f3d0;
      font-weight: 700;
    }

    .course-tags {
      display: flex;
      gap: 8px;
      flex-wrap: wrap;
      margin-top: 8px;
    }

    .tag-chip {
      display: inline-flex;
      align-items: center;
      padding: 4px 12px;
      background: #f3f4f6;
      border: 1px solid #e5e7eb;
      border-radius: 8px;
      font-size: 12px;
      color: #4b5563;
      font-weight: 500;
    }

    .article-excerpt {
      color: var(--color-text-light);
      font-size: 15px;
      line-height: 1.6;
      margin: 8px 0;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .content-meta {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
      margin-top: auto;
      padding-top: 12px;
      border-top: 1px solid #f3f4f6;
    }

    .content-tag {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      font-size: 14px;
      color: var(--color-text-light);
      font-weight: 500;
    }

    .content-actions {
      display: flex;
      flex-direction: column;
      gap: 10px;
      flex-shrink: 0;
      padding: 24px 20px;
      background: #f9fafb;
      border-left: 1px solid var(--color-border);
      justify-content: center;
    }

    .btn-edit {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      padding: 12px 20px;
      border: none;
      border-radius: 10px;
      font-family: var(--font-secondary);
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      white-space: nowrap;
      background: var(--color-primary) !important;
      color: white !important;
    }

    .btn-edit:hover {
      background: var(--color-primary-dark) !important;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(141, 119, 171, 0.3);
    }

    .btn-danger {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      padding: 12px 20px;
      border: none;
      border-radius: 10px;
      font-family: var(--font-secondary);
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      white-space: nowrap;
      background: var(--color-error) !important;
      color: white !important;
    }

    .btn-danger:hover {
      background: #dc2626 !important;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
    }

    .btn-reorder {
      transition: all 0.2s ease;
      padding: 6px 10px;
      font-size: 14px;
      background: #f3f4f6;
      border: 1px solid var(--color-border);
      border-radius: 6px;
      cursor: pointer;
    }
    
    .btn-reorder:disabled {
      opacity: 0.4;
      cursor: not-allowed;
    }

    .btn-reorder:not(:disabled):hover {
      background: #e5e7eb;
      transform: scale(1.1);
    }

    .category-item {
      padding: 12px 20px !important;
    }

    .category-actions {
      flex-direction: row !important;
      align-items: center !important;
      gap: 12px !important;
    }

    .reorder-btns {
      display: flex;
      gap: 4px;
      margin-right: 8px;
    }

    /* Status Toast */
    .status-toast {
      position: fixed;
      bottom: 32px;
      right: 32px;
      padding: 16px 24px;
      border-radius: 12px;
      font-size: 15px;
      font-weight: 500;
      box-shadow: var(--shadow-xl);
      transform: translateY(120%);
      transition: transform 0.3s ease;
      z-index: 1000;
      max-width: 400px;
    }

    .status-toast.show {
      transform: translateY(0);
    }

    .status-toast.success {
      background: var(--color-success);
      color: var(--color-text);
      font-weight: 600;
    }

    .status-toast.error {
      background: var(--color-error);
      color: white;
    }

    /* Mobile Header */
    .mobile-header {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: 64px;
      background: var(--color-white);
      border-bottom: 1px solid var(--color-border);
      padding: 0 16px;
      align-items: center;
      justify-content: space-between;
      z-index: 90;
      box-shadow: var(--shadow-sm);
    }

    .mobile-header .logo {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .mobile-header .logo-title {
      font-size: 16px;
      color: var(--color-primary);
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    /* Responsive */
    @media (max-width: 1024px) {
      .sidebar {
        transform: translateX(-100%);
      }

      .sidebar.open {
        transform: translateX(0);
      }

      .mobile-header {
        display: flex;
      }

      .mobile-nav-toggle {
        display: flex;
      }

      .main-content {
        margin-left: 0;
        margin-top: 64px;
        padding: 24px 16px;
        width: 100%;
      }

      .sidebar-header .mobile-nav-toggle {
        display: block;
      }

      .sidebar-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.5);
        z-index: 95;
      }

      .sidebar-overlay.active {
        display: block;
      }
    }

    @media (max-width: 768px) {
      .login-card {
        padding: 32px 24px;
        border-radius: 16px;
      }

      .login-header h1 {
        font-size: 24px;
      }

      .content-section {
        padding: 20px;
        border-radius: 12px;
      }

      .content-section h2 {
        font-size: 20px;
      }

      .form-row {
        grid-template-columns: 1fr;
        gap: 16px;
      }

      .content-list li {
        flex-direction: column;
      }

      .article-preview {
        width: 100%;
        height: 180px;
      }

      .content-info {
        padding: 16px;
      }

      .content-actions {
        flex-direction: row;
        width: 100%;
        padding: 12px;
        border-left: none;
        border-top: 1px solid var(--color-border);
        background: #fdfdfd;
      }

      .btn-edit,
      .btn-danger {
        flex: 1;
        padding: 10px;
        font-size: 13px;
      }

      .content-meta {
        gap: 12px;
      }

      .status-toast {
        left: 16px;
        right: 16px;
        bottom: 16px;
        max-width: none;
      }

      .nav-item {
        padding: 12px 16px;
      }

      .nav-item span {
        display: inline !important;
      }
    }

    @media (max-width: 480px) {
      .form-actions {
        flex-direction: column;
      }
      
      .form-actions button {
        width: 100%;
      }

      .article-header strong {
        font-size: 18px;
      }
    }
  </style>
</body>
</html>
