---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import PageHero from '../components/PageHero.astro';
import Footer from '../components/Footer.astro';


const breadcrumb = [
  { label: 'Home', href: '/' },
  { label: 'Admin', href: '/admin' },
];
---

<Layout title="Admin | Antonina Devitska" description="Admin portal for managing services.">
  <Header currentPage="admin" />

  <main>
    <PageHero title="Admin Console" breadcrumb={breadcrumb} />

    <section class="admin-section">
      <div class="container">
        <div class="admin-card">
          <div id="login-panel">
            <p class="eyebrow">Sign in</p>
            <h2>Admin access</h2>
            <p>
              Use your Firebase email/password credentials or Google to reach the services management interface.
            </p>

            <form id="email-login-form" class="admin-form">
              <label>
                Email
                <input type="email" id="email" name="email" required />
              </label>
              <label>
                Password
                <input type="password" id="password" name="password" required />
              </label>
              <button type="submit" class="primary">Sign in</button>
            </form>

            <button id="google-sign-in" class="secondary" type="button">
              Sign In with Google
            </button>
          </div>

          <div id="admin-panel" hidden>
            <div class="admin-panel-header">
              <div>
                <p class="eyebrow">Admin panel</p>
                <h2>Services management</h2>
              </div>
              <button id="sign-out-btn" class="ghost">Sign out</button>
            </div>

            <form id="service-form" class="admin-form">
              <label>
                Service title
                <input type="text" name="title" required />
              </label>
              <label>
                Description
                <textarea name="description" rows="3" required></textarea>
              </label>
              <button type="submit" class="primary">Save service</button>
              <button type="button" id="cancel-edit" class="ghost" hidden>
                Cancel edit
              </button>
            </form>

            <div class="service-list">
              <h3>Existing services</h3>
              <ul id="service-list"></ul>
            </div>
          </div>

          <p id="status-message" class="status" aria-live="polite"></p>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script type="module">
  import '/src/scripts/admin.ts';
</script>

<style>
  .admin-section {
    padding: 80px 0 120px;
  }

  .admin-card {
    background: var(--color-white);
    border-radius: 32px;
    padding: 48px;
    max-width: 960px;
    margin: 0 auto;
    box-shadow: 0 20px 45px rgba(17, 82, 62, 0.15);
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.4em;
    font-size: 12px;
    color: var(--color-text-muted);
    margin: 0 0 8px;
  }

  h2 {
    margin: 0 0 16px;
    font-size: 34px;
  }

  .admin-form {
    display: flex;
    flex-direction: column;
    gap: 14px;
    margin-bottom: 24px;
  }

  .admin-form label {
    font-weight: 500;
    font-size: 14px;
    color: var(--color-text-muted);
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .admin-form input,
  .admin-form textarea {
    padding: 12px 16px;
    border-radius: 10px;
    border: 1px solid rgba(26, 86, 63, 0.2);
    font-size: 16px;
  }

  .admin-form textarea {
    resize: vertical;
  }

  .primary,
  .secondary,
  .ghost {
    border: none;
    border-radius: 16px;
    padding: 12px 24px;
    font-size: 16px;
    cursor: pointer;
    font-weight: 600;
  }

  .primary {
    background: var(--color-primary);
    color: white;
    box-shadow: 0 10px 18px rgba(5, 40, 28, 0.25);
  }

  .secondary {
    background: rgba(17, 82, 62, 0.08);
    color: var(--color-text-black);
  }

  .ghost {
    background: transparent;
    color: var(--color-primary);
    border: 1px solid rgba(17, 82, 62, 0.3);
  }

  .tiny {
    padding: 6px 12px;
    font-size: 14px;
  }

  .admin-panel-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
  }

  .service-list ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 18px;
  }

  .service-list li {
    border-bottom: 1px solid rgba(17, 82, 62, 0.1);
    padding-bottom: 18px;
    display: flex;
    justify-content: space-between;
    gap: 16px;
  }

  .service-list strong {
    font-size: 18px;
  }

  .service-list p {
    margin: 4px 0 0;
    color: var(--color-text-muted);
  }

  .status {
    min-height: 24px;
    font-size: 15px;
    margin-top: 12px;
  }

  .status[data-error='true'] {
    color: #c11c41;
  }

  @media (max-width: 768px) {
    .admin-card {
      padding: 32px 24px;
    }

    .admin-panel-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 12px;
    }

    .service-list li {
      flex-direction: column;
    }
  }
</style>

